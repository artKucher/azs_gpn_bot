{
  "parser": "babel-eslint",
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "no-plusplus": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "comma-dangle": ["error", {
      "arrays": "ignore",
      "objects": "ignore",
//      "imports": "never",
//      "exports": "never",
      "functions": "ignore"
    }]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
